rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isEnterprisePlan() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.plan == 'enterprise';
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/roles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.permissions.hasAny([role]);
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - allow authenticated users to read/write their own document
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      allow create: if isAuthenticated() && userId == request.auth.uid;
    }
    
    // Coach profiles - allow authenticated enterprise users
    match /coach_profiles/{coachId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Client profiles - allow authenticated enterprise users
    match /client_profiles/{clientId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Subscriptions
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Templates
    match /templates/{templateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Appointments
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Roles
    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Revenue metrics
    match /revenue_metrics/{metricId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Email logs
    match /email_logs/{logId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only cloud functions can write
    }
    
    // Admin notifications - allow authenticated users to read
    match /admin_notifications/{notificationId} {
      allow read: if isAuthenticated();
      allow update: if isAuthenticated(); // Allow marking as read
      allow create, delete: if false; // Only cloud functions can create/delete
    }
    
    // Reminder tasks (cloud functions only)
    match /reminder_tasks/{taskId} {
      allow read, write: if false; // Only cloud functions
    }
    
    // Client-specific collections (all allow authenticated access)
    match /client_settings/{clientId} {
      allow read: if isAuthenticated();
      allow update: if isAuthenticated();
      allow create, delete: if false; // Only cloud functions create
    }
    
    match /client_progress/{clientId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /workout_plans/{clientId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /nutrition_plans/{clientId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /client_assessments/{clientId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /client_activities/{clientId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /client_notes/{clientId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
